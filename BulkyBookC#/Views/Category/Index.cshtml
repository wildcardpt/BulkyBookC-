@{
   
}
@model List<Category>
@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6">
            <div class="text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category <i class="bi bi-plus-circle-fill"></i></a>
            </div>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
               Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(Category cat in Model.OrderBy(l => l.DisplayOrder))
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.DisplayOrder</td>
                <td div class="w-75" role="group"> 
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square">Edit</i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash">Delete</i>
                    </a>
                </td>
        </tr>
    }
    </tbody>
</table>