@{
   
}
@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6">
            <div class="text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category <i class="bi bi-plus-circle-fill"></i></a>
            </div>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
               Display Order
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach(Category cat in Model.OrderBy(l => l.DisplayOrder))
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.DisplayOrder</td>
        </tr>
    }
    </tbody>
</table>